<main class="index">

<% if flash[:destroied] %>
  <p class="success-massage"><%= flash[:destroied] %></p>
<% end %>

<h1>Books</h1>

<table>
  <thead>
   <tr>
     <th>title</th>
     <th>body</th>
     <th></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
        <%= link_to "Show", book_path(book.id) %>
        <%= link_to "Edit", edit_book_path(book.id) %>
        <%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>

<% if @book.errors.any? %>
  <div class="error">
    <p class="error-headline"><%= pluralize(@book.errors.count,"error") %> prohibited this book from being saved:</p>
    <ul class="error-list">
      <% @book.errors.full_messages.each do |message| %>
      <li class="error-li"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@book) do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <br><%= f.submit 'Create Book' %></br>

<% end %>
